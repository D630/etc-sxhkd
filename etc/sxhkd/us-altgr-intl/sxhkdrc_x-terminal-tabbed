# wm independent hotkeys

super + q
        exec reload-sxhkd

super + alt + s
        exec run-scrot -m

super + shift + s
        exec run-scrot

super + shift + Delete
        exec xorg-lock

super + p
        exec dacti

super + r
        exec arandr

XF86Audio{Raise,Lower}Volume
        exec volume {+,-}

XF86AudioMute
        exec volume toggle

super + XF86AudioMute
        exec mpc -q toggle

super + XF86Audio{Lower,Raise}Volume
        exec mpc -q {prev,next}

#  vim: set ts=8 sw=8 tw=0 et :
